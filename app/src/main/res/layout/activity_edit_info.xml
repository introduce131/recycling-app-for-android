<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditInfoActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 수정 화면 -->
            <TextView
                android:id="@+id/textname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:text="닉네임"
                android:textColor="#000000"
                android:textFontWeight="600"
                android:textSize="22sp" />

            <EditText
                android:id="@+id/editNickName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_text_border"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:hint="입력해주세요"
                android:paddingLeft="15dp"
                android:textColor="#000000"
                android:textSize="18sp" />

            <!-- android:id="@+id/textGuideSub" -->
            <TextView
                android:id="@+id/textGS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="한글 1자, 영문 2자 이상(숫자 혼용 가능)" />


            <TextView
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/roboto_medium"
                android:text="거주지"
                android:textColor="#000000"
                android:textFontWeight="600"
                android:textSize="22sp" />

            <!-- android:id="@+id/spinner" -->
            <Spinner
                android:id="@+id/spinnerZone"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_text_border"
                android:paddingLeft="10dp"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/roboto_medium"
                android:text="재활용 요일 선택"
                android:textColor="#000000"
                android:textFontWeight="600"
                android:textSize="22sp" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/checkBMon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="월요일"
                    android:textSize="16sp" />
                <!-- android:id="@+id/checkBoxTue -->
                <CheckBox
                    android:id="@+id/checkBTue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="화요일"
                    android:textSize="16sp" />
                <!-- android:id="@+id/checkBoxWed -->
                <CheckBox
                    android:id="@+id/checkBWed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="수요일"
                    android:textSize="16sp" />
                <!-- android:id="@+id/checkBoxThu -->
                <CheckBox
                    android:id="@+id/checkBThu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="목요일"
                    android:textSize="16sp" />
                <!-- android:id="@+id/checkBoxFri -->
                <CheckBox
                    android:id="@+id/checkBFri"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="금요일"
                    android:textSize="16sp" />
                <!-- android:id="@+id/checkBoxMSat -->
                <CheckBox
                    android:id="@+id/checkBSat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="토요일"
                    android:textSize="16sp" />
                <!-- android:id="@+id/checkBoxSun -->
                <CheckBox
                    android:id="@+id/checkBSun"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="일요일"
                    android:textSize="16sp" />
            </LinearLayout>

            <Button
                android:id="@+id/buttonComplete"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:backgroundTint="#373737"
                android:layout_marginTop="20dp"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:text="완료" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>